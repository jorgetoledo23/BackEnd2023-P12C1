@model WebApp.Models.Producto

@{
    ViewData["Title"] = "AddProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-white shadow m-2 p-2">
  <div class="card-body text-center">
    <h5 class="card-title">Agregar Producto</h5>
        <a class="btn btn-outline-light" asp-action="IndexProductos"><i class="bi bi-arrow-left-circle mx-2"></i>Volver al Listado</a>
  </div>
</div>
<div class="row m-2 p-2">
    <div class="col-md-4">
        <form asp-action="AddProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="UrlImagen" class="control-label"></label>
                <input asp-for="UrlImagen" class="form-control" />
                <span asp-validation-for="UrlImagen" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Agregar Producto" class="btn btn-outline-dark col-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
